#:kivy 1.9.2

# RecycleView is new in 1.9.2 and replaces ListView (deprecated in 1.9.2).

#:import browser webbrowser

#:set _fsize dp(12)

# Tigerr is a BoxLayout containing 2 side-by-side panes featuring RecycleViews
# and appropriate controls above each pane with a title label

# orientation: 'horizontal' --> y, top and center_y may be used for pos hints
# orientation: 'vertical' --> x, right and center_x may be used

<Tigerr>:
    canvas:
        Color:
            rgba: 0.3, 0.3, 0.3, 1
        Rectangle:
            size: self.size
            pos: self.pos
    # (A)
    orientation: 'vertical'
    cols: 1
    rows: 3
    BoxLayout:
        size_hint: (None, None)
        height: dp(24)
        orientation: 'vertical'
        cols: 1
        rows: 1
        Label:
            # (file/edit/view menu)
            # TODO
            text_size: [self.width + 4, self.height + 2]
            text: 'file edit view buttons'
            valign: 'top'
            halign: 'center'
            padding: [1, 4]
            height: dp(12)
    BoxLayout:
        size_hint_y: 0.9
        canvas:
            Color:
                rgba: 0.4, 0.4, 0.4, 1
            Rectangle:
                size: self.size
                pos: self.pos
        # (B)
        orientation: 'horizontal'
        cols: 2
        rows: 1
        spacing: 5
        BoxLayout:
            # (C)
            canvas:
                Color:
                    rgba: .5, 0., 0., 1
                Rectangle:
                    size: self.size
                    pos: self.pos
            orientation: 'vertical'
            cols: 1
            rows: 3
            Label:
                text: 'Queries'
            Label:
                text: 'query icons here'
            RecycleView:
                # TODO
        BoxLayout:
            # (D)
            canvas:
                Color:
                    rgba: 0., 0., .5, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
            orientation: 'vertical'
            cols: 1
            rows: 3
            Label:
                text: 'Patchsets'
            Label:
                text: 'patchset icons here'
            RecycleView:
                # TODO
    BoxLayout:
        size_hint: (None, None)
        height: dp(24)
        orientation: 'vertical'
        cols: 1
        rows: 1
        Label:
            height: dp(14)
            font_size: dp(12)
            text_size: [root.width, self.height + 2]
            text: 'last banner message / query status'
            valign: 'middle'
            halign: 'right'


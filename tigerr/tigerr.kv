#:kivy 1.9.2

# RecycleView is new in 1.9.2 and replaces ListView (deprecated in 1.9.2).

#:import browser webbrowser

#:set _fsize dp(12)



# orientation: 'horizontal' --> y, top and center_y may be used for pos hints
#              [ horiz | horiz ]

# orientation: 'vertical' --> x, right and center_x may be used
#              [ vert ]
#              [ ---- ]
#              [ vert ]


<MenuButton@Button>:
    font_size: dp(12)
    size_hint: (None, None)
    size: dp(50), dp(25)
    padding_x: dp(12)
    padding_y: dp(6)
    text_size: self.size
    text: ''
    multiline: False


# Tigerr is a BoxLayout containing 2 side-by-side panes featuring RecycleViews
# and appropriate controls above each pane with a title label
<Tigerr>:
    canvas:
        Color:
            rgba: 0.3, 0.3, 0.3, 1
        Rectangle:
            size: self.size
            pos: self.pos
    # (A)
    orientation: 'vertical'
    cols: 1
    rows: 3
    queries: queries
    BoxLayout:
        size_hint: (None, None)
        height: dp(24)
        orientation: 'horizontal'
        cols: 4
        rows: 1
        MenuButton:
            text: 'file'
        MenuButton:
            text: 'edit'
        MenuButton:
            text: 'view'
        Label:
            # (file/edit/view menu)
            # TODO
            font_blending: False
            text_size: [self.width + 4, self.height + 2]
            font_size: dp(11)
            width: root.width
            text: ''
            valign: 'middle'
            halign: 'right'
            height: dp(12)
            multiline: False
            font_name: 'fonts/Vera.ttf'
    BoxLayout:
        size_hint_y: 0.9
        canvas:
            Color:
                rgba: 0.4, 0.4, 0.4, 1
            Rectangle:
                size: self.size
                pos: self.pos
        # (B)
        orientation: 'horizontal'
        cols: 2
        rows: 1
        spacing: 5
        BoxLayout:
            # (C)
            canvas:
                Color:
                    rgba: 0.4, 0.4, 0.4, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
            orientation: 'vertical'
            cols: 1
            rows: 2
            size_hint: (0.3, 1.0)
            size: (q.width, root.height)
            PanelHeader:
                id: q
                width: dp(140)
                text: 'Queries'
                bold: True
            AddQueryButton:
                text: 'create'
            RecycleView:
                id: queries
                scroll_type: ['bars', 'content']
                scroll_wheel_distance: dp(124)
                bar_width: dp(8)
                viewclass: 'QueryRow'
                RecycleBoxLayout:
                    default_size: None, dp(25)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                    spacing: dp(5)

        BoxLayout:
            # (D)
            canvas:
                Color:
                    rgba: 0.35, 0.35, 0.35, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
            orientation: 'vertical'
            cols: 1
            rows: 3
            size_hint: (1.0, 1.0)
            PanelHeader:
                text: 'Patchsets'
            Label:
                text: ''
            RecycleView:
                # TODO
                id: patchsets
                scroll_type: ['bars', 'content']
                scroll_wheel_distance: dp(124)
                bar_width: dp(10)
                viewclass: 'PatchsetRow'
                RecycleBoxLayout:
                    default_size: None, dp(50)
                    default_size_hint: 1, None
                    size_hint_y: None
                    height: self.minimum_height
                    orientation: 'vertical'
                    spacing: dp(5)
    BoxLayout:
        size_hint: (None, None)
        height: dp(24)
        orientation: 'vertical'
        cols: 3
        rows: 1
        Label:
            font_name: 'fonts/Vera.ttf'
            multiline: False
            height: dp(14)
            font_size: dp(10)
            text_size: [root.width, dp(12)]
            opacity: 0.25
            text: 'last banner message / query status'
            valign: 'middle'
            halign: 'right'



<PatchsetRow@BoxLayout>:
    canvas.before:
        Color:
            rgba: 0.5, 0.5, 0.5, 1
        Rectangle:
            size: self.size
            pos: self.pos
    subject: 'TODO'
    GridLayout:
        cols: 2
        rows: 2
        Button: 
            text: root.subject
        Label:
            text: '1'
        Label:
            text: '2'
        Label:
            text: '3'

<QueryRow@BoxLayout>:
    canvas.before:
        Color:
            rgba: 0.6, 0.6, 0.6, .1
        Rectangle:
            size: self.size
            pos: self.pos
    title: 'query name'
    query: ''
    alerts: 0
    qid: ''
    GridLayout:
        rows: 1
        cols: 3
        ToggleButton:
            size_hint: (None, None)
            size: (dp(32), dp(32))
            group: root.title
            text: ''
            state: 'normal'
            Image:
                size_hint: (None, None)
                size: (dp(32), dp(32))
                source: 'images/eye_open.gif'
        Label:
            font_name: 'fonts/Vera.ttf'
            font_size: dp(10)
            text: root.title
            text_size: [root.width / 1.5, dp(10)]
            halign: 'right'
            valign: 'middle'
            bold: False
            multiline: False
            shorten: True
        Label:
            font_name: 'fonts/Vera.ttf'
            font_size: dp(12)
            text: str(root.alerts)
            opacity: 0.0


<AddQueryButton@Button>:
    text: ''
    size_hint: (None, None)
    pos_hint: {'right': 1.0}
    text_size: self.size
    width: dp(50)
    height: dp(15)
    valign: 'top'
    halign: 'center'
    font_size: dp(9)
    font_name: 'fonts/Vera.ttf'
    on_release: app.show_add_query()


<AddQuery>:
    size_hint: 0.75, 0.75
    auto_dismiss: False
    title: 'Create Query'
    separator_color: [1.0, 1.0, 1.0, 0.5]
    GridLayout:
        cols: 1
        rows: 5
        Label:
            text: 'Query Title:'
            font_size: dp(20)
            size_hint: (None, None)
            pos_hint: {'left': 0.0}
        TextInput:
            id: title
            font_size: dp(15)
            multiline: False
            font_name: 'fonts/Vera-Bold.ttf'
            bold: True
            text: 'My Custom Query'
        Label:
            text: 'Query:'
            font_size: dp(20)
            size_hint: (None, None)
            pos_hint: {'left': 0.0}
        TextInput:
            id: query
            font_size: dp(12)
            multiline: True
            font_name: 'fonts/Vera.ttf'
            bold: False
            text: 'is:open project:...'
        GridLayout:
            cols: 3
            rows: 1
            padding: dp(10)
            Button:
                text: 'cancel'
                on_press: root.dismiss()
            Button:
                text: 'test query'
                on_press: pass
            Button:
                text: 'save'
                on_press: app.add_query(title=title.text, query=query.text); root.dismiss();


<PanelHeader@Label>:
    text: ''
    color: 1, 1, 1, 0.5
    size_hint: (None, None)
    padding: 5, 5
    text_size: root.width, self.height
    valign: 'top'
    halign: 'left'
    height: dp(25)
    width: self.width
    font_size: dp(15)
    bold: True
    font_name: 'fonts/Vera-Bold.ttf'
